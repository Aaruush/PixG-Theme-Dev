{% if cart.item_count > 0 %}
  <div class="flex flex-col justify-center items-center">
    <div class=" flex justify-between items-center m-4 w-3/4 my-10">
      <h class="text-2xl"> Your Cart </h>

      <a href="{{routes.all_products_collection_url}}" class="text-blue-500"> Continue Shopping</a>
    </div>
 

<table class="table-auto border-collapse border border-gray-400 w-3/4 text-left">
  <thead class="bg-gray-200">
    <tr>
      <th class="border border-gray-400 px-4 py-2">Product</th>
      <th class="border border-gray-400 px-4 py-2">Quantity</th>
      <th class="border border-gray-400 px-4 py-2">Total Price</th>
    </tr>
  </thead>
  <tbody>
    {% for item in cart.items %}
      <img src="{{item.image}}" alt="" >
      <tr>
      <td class="border border-gray-400 px-4 py-2">
        {% if item.image %}
        <img class="w-20 h-20 object-cover border border-grey" src="{{ item.image.src }}" alt="{{ item.title }}" >
        {% else %}
        {{ 'product-1' |  placeholder_svg_tag: "w-20 h-20 object-cover border border-grey"}}

        {%endif%}
      </td>
      <td class="border border-gray-400 px-4 py-2">2</td>
      <td class="border border-gray-400 px-4 py-2">$40</td>
    </tr>
    {% endfor %}
  </tbody>
</table>
 </div>
{% else %}
  <div class="w-full h-screen flex justify-Start items-center flex-col py-50">
    <h1 class="text-2xl py-5">Your cart is empty</h1>
    <button type="button" class="bg-black text-white px-5 py-2 ">
      <a href="{{ routes.all_products_collection_url }}"> Continue Shopping </a>
    </button>
  </div>
{% endif %}
